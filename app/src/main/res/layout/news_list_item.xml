<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data class="NewsListItemBinding">

        <variable
            name="viewModel"
            type="com.infosystest.ui.NewsListResponse.RowsEntity" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/root_layout"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/repo_image"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_margin="@dimen/dp_16"
                android:scaleType="centerCrop"
                app:newsAvatarUrl="@{viewModel.imageHref}" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_16"
                android:layout_marginEnd="@dimen/dp_36"
                android:layout_marginBottom="@dimen/dp_16"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_6"
                    android:fontFamily="sans-serif"
                    android:text="@{viewModel.description}"
                    android:textColor="@color/color_list_item"
                    android:textSize="@dimen/sp_12"
                    tools:text="mbinary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:text="@{viewModel.title}"
                    android:textColor="@color/color_list_item"
                    android:textSize="@dimen/sp_15"
                    tools:text="Vita" />
               <LinearLayout
                   android:id="@+id/bottom_container"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:animateLayoutChanges="true"
                   android:visibility="gone"
                   android:orientation="vertical"
                   >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_8"
                    android:layout_marginBottom="@dimen/dp_8"
                    android:fontFamily="sans-serif"
                    android:text="@{viewModel.description}"
                    android:textColor="@color/color_list_item"
                    android:textSize="@dimen/sp_12"
                    tools:text="Vita" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_dot"
                        android:drawablePadding="@dimen/dp_8"
                        android:fontFamily="sans-serif"
                        android:text="@{viewModel.language}"
                        android:textColor="@color/color_list_item"
                        android:textSize="@dimen/sp_12"
                        tools:text="Vita" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_16"
                        android:drawableLeft="@drawable/ic_star_gold_16dp"
                        android:drawablePadding="@dimen/dp_8"
                        android:fontFamily="sans-serif"
                        android:textColor="@color/color_list_item"
                        android:textSize="@dimen/sp_12"
                        app:integerText="@{viewModel.stars}"
                        tools:text="Vita" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_16"
                        android:drawableLeft="@drawable/ic_repo_forked_icon"
                        android:drawablePadding="@dimen/dp_8"
                        android:fontFamily="sans-serif"
                        android:textColor="@color/color_list_item"
                        android:textSize="@dimen/sp_12"
                        app:integerText="@{viewModel.forks}"
                        tools:text="Vita" />
                </LinearLayout>
               </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_seprator_line" />
    </LinearLayout>
</layout>